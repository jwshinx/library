<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="columns">
    <div id="sidebar">
      <%= link_to 'Categories', categories_path %><br />
      <%= link_to 'Authors', authors_path %><br />
      <%= link_to 'Statuses', statuses_path %><br />
      <%= link_to 'Books', books_path %><br />
      <%= link_to 'People', people_path %><br />
      <br /><br /><br />
      <% if session[:user_id] %>
        <%= link_to 'Transactions', transactions_path %><br />
        <%= link_to 'Users', users_path %><br />
        <br />
        <%= button_to 'Logout', logout_path, :method => :delete %>
      <% else %>
        <%= link_to 'Login', admin_path %><br /><br />
      <% end %>
    
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
